@model IEnumerable<Assignment13.Models.Cricket>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron bg-black img-fluid">
    @{Html.RenderPartial("_CView");}
</div>
<h2>OurCricWebsite</h2>
<h2 class="bg-primary text-white text-center"> Number of Teams in Qualifier are: @ViewBag.noC</h2>
<h2 class="bg-warning text-dark text-center">@ViewData["Message"]</</h2>


<table class="table-bordered bg-warning text-dark text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoWc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoWc)
            </td>

        </tr>
    }

</table>